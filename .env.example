# Configuration de la plateforme Omra
# Copier ce fichier en .env et modifier les valeurs selon vos besoins

# Base de données Auth Service
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432
AUTH_DB_NAME=authdb
AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=postgres

# Base de données Flight Service
FLIGHT_DB_HOST=flight-db
FLIGHT_DB_PORT=5432
FLIGHT_DB_NAME=flightdb
FLIGHT_DB_USER=postgres
FLIGHT_DB_PASSWORD=postgres

# Base de données Hotel Service
HOTEL_DB_HOST=hotel-db
HOTEL_DB_PORT=5432
HOTEL_DB_NAME=hoteldb
HOTEL_DB_USER=postgres
HOTEL_DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=change_this_secret_in_production_min_256_bits_key_required

# Services URLs (pour planning-service)
SERVICES_FLIGHT_URL=http://flight-service:8082
SERVICES_HOTEL_URL=http://hotel-service:8083

# Ports externes
AUTH_SERVICE_PORT=8081
FLIGHT_SERVICE_PORT=8082
HOTEL_SERVICE_PORT=8083
PLANNING_SERVICE_PORT=8084
FRONTEND_PORT=3000

# PostgreSQL Ports externes
AUTH_DB_EXTERNAL_PORT=5432
FLIGHT_DB_EXTERNAL_PORT=5433
HOTEL_DB_EXTERNAL_PORT=5434
